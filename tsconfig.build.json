{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": false,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "declaration": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "worker-configuration.d.ts"
    ]
}